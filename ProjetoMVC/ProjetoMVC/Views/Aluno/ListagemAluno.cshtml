@model IEnumerable<ProjetoMVC.Models.Aluno>
@{
    ViewData["Title"] = "ListagemAluno";
}

<h2>ListagemAluno</h2>

<div>
    <input type="text" name="campo1" placeholder="Informe o Aluno" />
    <input type="submit" name="botao1" value="Buscar" />
</div><br />

<a href="/Aluno/Novo" class="btn btn-default">Novo Aluno</a>
<table class="table table-hover table-striped">
    <tr>
        <th>
            Nome
        </th>
        <th>
            CPF
        </th>
        <th>
            Data de Nascimento
        </th>
        <th>
            Número
        </th>
        <th>
            Orgão Expedidor
        </th>
        <th>
            RG
        </th>
        <th>
            Rua
        </th>
        <th>
            Sexo
        </th>
        <th>
            UF
        </th>
        <th>
            Cidade
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @item.Nome
        </td>
        <td>
            @item.Cpf
        </td>
        <td>
            @item.DataNascimento
        </td>
        <td>
            @item.Numero
        </td>
        <td>
            @item.OrgaoExpedidor
        </td>
        <td>
            @item.Rg
        </td>
        <td>
            @item.Rua
        </td>
        <td>
            @item.Sexo
        </td>
        <td>
            @item.Uf
        </td>
        <td>
            @item.Cidade
        </td>
        <td>
            <a href="/livro/editar/@item.Id" class="btn btn-default"><i class="glyphicon glyphicon-edit"></i></a>
            <a href="/livro/Excluir/@item.Id" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
        </td>
    </tr>
    }

</table>