@model IEnumerable<ProjetoMVC.Models.Aluno>

@{
    ViewData["Title"] = "Novo";
}



<div class="container">

    <div class="page-header">
        <h1>Cadastro de Alunos</h1>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h3>Informe os dados</h3>
            <form method="post">

                <div class="form-grup">
                    <label for="Nome">Nome: </label>
                    <input type="text" class="form-control" id="Nome" name="Nome">
                </div>

                <div class="form-grup">
                    <label for="Cpf">CPF: </label>
                    <input type="text" class="form-control" id="Cpf" name="Cpf">
                </div>           

                <div class="form-grup">
                    <label for="DataNascimento">Data de Nascimento: </label>
                    <input type="date" id="DataNascimento" class="form-control" name="DataNascimento">
                </div>

                <div class="form-grup">
                    <label for="Numero">Número: </label>
                    <input type="text" class="form-control" id="Numero" name="Numero">
                </div>

                <div class="form-grup">
                    <label for="OrgaoExpedidor">Orgão Expedidor: </label>
                    <input type="text" class="form-control" id="OrgaoExpedidor" name="OrgaoExpedidor">
                </div>

                <div class="form-grup">
                    <label for="Rg">RG: </label>
                    <input type="text" class="form-control" id="Rg" name="Rg">
                </div>

                <div class="form-grup">
                    <label for="Rua">Rua: </label>
                    <input type="text" class="form-control" id="Rua" name="Rua">
                </div>

                <div class="form-grup">
                    <label for="Sexo">Sexo: </label>
                    <input type="text" class="form-control" id="Sexo" name="Sexo">
                </div>

                <div class="form-grup">
                    <label for="Uf">UF: </label>
                    <input type="text" class="form-control" id="Uf" name="Uf">
                </div>

                <div class="form-grup">
                    <label for="Cidade">Cidade: </label>
                    <input type="text" class="form-control" id="Cidade" name="Cidade">
                </div>



                <button type="submit" class="btn btn-default">
                    Salvar
                </button>

            </form>
        </div>
    </div>
</div>

