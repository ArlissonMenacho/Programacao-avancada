@model IEnumerable<ProjetoMVC.Models.Funcionario>
@{
    ViewData["Title"] = "Novo";
}
<div class="container">
<div class="page-header">
    <h1>Cadastro de Funcionarios</h1>
</div>
<div class="row">
    <div class="col-sm-12">
        <h3>Informe os dados</h3>
        <form action="/Funcionario/Novo" method="post">

            <div class="form-grup">
                <label for="Nome">Nome: </label>
                <input type="text" class="form-control" id="Nome" name="Nome">
            </div>

            <div class="form-grup">
                <label for="Cpf">CPF: </label>
                <input type="text" class="form-control" id="Cpf" name="Cpf">
            </div>

            <div class="form-grup">
                <label for="Cargo">Cargo: </label>
                <input type="text" class="form-control" id="Cargo" name="Cargo">
            </div>

            <div class="form-grup">
                <label for="Matricula">Matricula: </label>
                <input type="text" class="form-control" id="Matricula" name="Matricula">
            </div>

            <div class="form-grup">
                <label for="Pis">Pis: </label>
                <input type="text" class="form-control" id="Pis" name="Pis">
            </div>

            <div class="form-grup">
                <label for="DataAdmissao">Data de Admissão: </label>
                <input type="date" id="DataAdmissao" class="form-control" name="DataAdmissao">
            </div>

            <div class="form-grup">
                <label for="Salario">Salario: </label>
                <input type="text" class="form-control" id="Salario" name="Salario">
            </div>


            <button type="submit" class="btn btn-default">
                Salvar
            </button>

        </form>
    </div>
</div>
</div>